<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level \(%file:%L\) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
         <appender-ref ref="STDOUT" />
     </root>

    <logger name="org.drools" level="debug"/>
 </configuration>